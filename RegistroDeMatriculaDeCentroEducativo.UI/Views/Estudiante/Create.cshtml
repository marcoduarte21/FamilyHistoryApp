@model RegistroDeMatriculaDeCentroEducativo.Model.Estudiante


@{
    ViewData["Title"] = "Matricula";
}

<h1>Matricular estudiante</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="Id" />    
                    <div class="form-group">
                        <label asp-for="Cedula" class="control-label"></label>
                        <input asp-for="Cedula" class="form-control" />
                        <span asp-validation-for="Cedula" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PrimerApellido" class="control-label"></label>
                        <input asp-for="PrimerApellido" class="form-control" />
                        <span asp-validation-for="PrimerApellido" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SegundoApellido" class="control-label"></label>
                        <input asp-for="SegundoApellido" class="form-control" />
                        <span asp-validation-for="SegundoApellido" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Sexo" class="control-label"></label><br />
                        <select asp-items="@(Html.GetEnumSelectList<RegistroDeMatriculaDeCentroEducativo.Model.Sexo>())" asp-for="Sexo"></select>
                        <span asp-validation-for="Sexo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FechaDeNacimiento" class="control-label"></label>
                        <input asp-for="FechaDeNacimiento" class="form-control" />
                        <span asp-validation-for="FechaDeNacimiento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CedulaMadre" class="control-label"></label>
                        <input asp-for="CedulaMadre" class="form-control" />
                        <span asp-validation-for="CedulaMadre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CedulaPadre" class="control-label"></label>
                        <input asp-for="CedulaPadre" class="form-control" />
                        <span asp-validation-for="CedulaPadre" class="text-danger"></span>
                    </div><br />
                    <div class="form-group">
                        <input type="submit" value="Matricular" class="btn btn-primary" />
                    </div>
                    </form>
                    </div>
                </div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
